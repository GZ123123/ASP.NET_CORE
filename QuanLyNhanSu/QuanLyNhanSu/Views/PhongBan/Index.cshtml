@model IEnumerable<QuanLyNhanSu.Models.PhongBan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="PhongBan">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.MaPB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenPB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.MaPB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenPB)
            </td>
            <td>
                <a asp-controller="PhongBan" asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a>
                <a asp-controller="PhongBan" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
